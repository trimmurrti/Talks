#!/bin/bash

find . -name '*.gyb' |
    while read file; do
        target="Generated/${file#*/}"
        target="${target%.gyb}"
        echo "Generating $file into $target"

        mkdir -p $(dirname $target)
        ./bin/gyb --line-directive '' -o "$target" "$file";
    done

export PATH=~/.rbenv/shims:$PATH
ruby bin/add-generated-to-project.rb
